https://codeforces.com/problemset/problem/1877/C

#include<bits/stdc++.h>
using namespace std;

int n,m,k;
inline void solve()
{
	scanf("%d%d%d",&n,&m,&k);
	if(k>3) puts("0");
	else if(k==1) puts("1");
	else if(k==2) printf("%d\n",min(n-1,m)+m/n);
	else printf("%d\n",m-(min(n-1,m)+m/n));
}
int main()
{
	int T=1;
	scanf("%d",&T);
	while(T--) solve();
	return 0;
}

