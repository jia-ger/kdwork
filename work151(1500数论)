https://codeforces.com/problemset/problem/1877/D

#include <bits/stdc++.h>
using namespace std;
#define itn int
#define icn cin
#define int long long
#define endl '\n'
typedef pair<int,int> PII;
const int N=1e5+10;
const int INF=1e18;
const int mod=998244353;
#define ll __int128

int n,ans=0;
int a[100020],f[100020],p[100020];
void solve()
{       
   cin>>n;
	for(int i=1;i<=n;i++){
		cin>>a[i];
	}
	for(int i=1;i<=n;i++){
		for(int j=i;j<=n;j+=i){
			f[i]=max(f[i],a[j]);//选i对应的最大分数 
		}
	}
	sort(f+1,f+n+1);//分数排序 
	p[0]=1;
	for(int i=1;i<=n;i++){
		p[i]=(p[i-1]*2)%mod;
	} 
	for(int i=n;i>=1;i--){
		ans=(ans+(f[i]*p[i-1])%mod)%mod;//选分数最大的 剩下的i-1个情况为2^(i-1) 
	}
	cout<<ans;
    
} 



signed main(){
   cin.tie(0)->sync_with_stdio(0);	 
   int T=1; 
//   cin>>T;
   while(T--)solve();
   
    return 0;
}
