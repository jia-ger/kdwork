https://codeforces.com/problemset/problem/1881/E

#include <bits/stdc++.h>
using namespace std;
#define itn int
#define icn cin
#define int long long
#define endl '\n'
typedef pair<int,int> PII;
const int N=2e5+10;
const int INF=1e18;
const int mod=998244353;
#define ll __int128

int a[N];
int dp[N]; 
void solve()
{    
  int n;cin>>n;
  memset(dp,0,sizeof dp);
  for(itn i=1;i<=n;i++)
  cin>>a[i];  
  if(a[n]==0)dp[n]=0;
  else dp[n]=1;
  for(itn i=n-1;i>=1;i--)
  {
  	dp[i]=dp[i+1]+1;//删除这个数 
  	if(a[i]+i<=n)dp[i]=min(dp[i],dp[i+a[i]+1]);//保留这个数 
  }
  cout<<dp[1]<<endl;
}



signed main(){
   cin.tie(0)->sync_with_stdio(0);	 
   int T=1; 
   cin>>T;
   while(T--)solve();
   
    return 0;
}
