https://codeforces.com/problemset/problem/2061/C

#include <bits/stdc++.h>
using namespace std;
#define itn int
#define icn cin
#define int long long
#define endl '\n'
typedef pair<int,int> PII;
const int N=2e5+10;
const int INF=1e18;
const int mod=998244353;
#define ll __int128

int f[N][2]; //两种状态 0骗子 1好人 
void solve()
{
  itn n;
  cin>>n;
  for(int i=1;i<=n;i++)
  f[i][0]=f[i][1]=0; 
  vector<itn>a(n+1);
  for(int i=1;i<=n;i++)cin>>a[i];
  
  f[1][0]=1;
  f[1][1]=a[1]==0;
  
  for(int i=2;i<=n;i++)
  {
    f[i][0]=f[i-1][1];//i是骗子的方案数=i-1是好人
    //i是好人 分两种情况 i-1好人 i-1骗子 
	if(a[i-1]==a[i])f[i][1]=(f[i][1]+f[i-1][1])%mod;	
	if(a[i]==a[i-2]+1)f[i][1]=(f[i][1]+f[i-1][0])%mod; 
  } 
  
  int ans=(f[n][0]+f[n][1])%mod;
  cout<<ans<<endl; 
}


signed main() {
	cin.tie(0)->sync_with_stdio(0);
	int T=1;
	cin>>T;

	while(T--)solve();

	return 0;
}
