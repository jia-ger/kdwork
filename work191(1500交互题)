https://codeforces.com/problemset/problem/2001/C

#include <bits/stdc++.h>
using namespace std;
#define itn int
#define icn cin
#define int long long
//#define endl '\n'
typedef pair<int,int> PII;
const int N=1e4+10;
const int INF=1e18;
const int mod=998244353;
#define ll __int128

int n,ans;
int edu[1001],edv[1001],eds;
void solve()
{ 
  cin>>n;
  eds=0;
  for(int i=2;i<=n;i++){//以1为根节点考虑 n-1个点 
		cout<<"? "<<1<<" "<<i<<endl;
		cin>>ans;//这个值是中点 找点是log级别 
		int u=1,v=i;
		while(ans!=u&&ans!=v){
			u=ans;
			cout<<"? "<<u<<" "<<v<<endl;
			cin>>ans;
		}
		eds++;
		edu[eds]=u;
		edv[eds]=v;
	}
	cout<<"! ";
	for(int i=1;i<n;i++){
		cout<<edu[i]<<" "<<edv[i]<<" ";
	}
	cout<<endl;
}



signed main(){
//   cin.tie(0)->sync_with_stdio(0);	 
   int T=1; 

   cin>>T;
   while(T--)solve();
   
    return 0;
}
